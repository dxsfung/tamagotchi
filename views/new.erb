<h1 class="text-center">Tamagotchi
    <%=@@my_pet.name%>
    is
    <%if @@my_pet.is_alive%>
    alive
    <%else%>
    dead
    <%end%>
    !</h1>

<%if @@my_pet.is_alive%>
<div class="col-sm-12">
<li class="list-group-item">
    <img class="center-block img-responsive" style="max-height:300px" src="https://media2.giphy.com/media/UrMQUIrD7waHu/200.webp#0
"></li>
</div>
<%else%>
<div class="container-fluid">
<li class="list-group-item">
    <img class="center-block img-responsive" style="max-height:300px" src="http://orig06.deviantart.net/982b/f/2014/074/f/4/dead_tamagotchi___gif_by_noah_tenshin-d7a9caj.gif
    "></li>
</div>
<%end%>

<div class="container-fluid">

    <form action="upfood">
        <button class="btn btn-info center-block">
            Food Level
            <%=@@my_pet.food_level%>
            (Click to feed
            <%=@@my_pet.name%>
            )
        </button>
    </form>

    <form action="upsleep">
        <button class="btn btn-primary center-block">
            Sleep Level
            <%=@@my_pet.sleep_level%>
            (Click to make
            <%=@@my_pet.name%>
            sleep)
        </button>
    </form>

    <form action="upactivity">
        <button class="btn btn-danger center-block">
            Activity Level
            <%=@@my_pet.activity_level%>
            (Click to exercise
            <%=@@my_pet.name%>
            )
        </button>
    </form>

    <form action="/">
        <button class="btn btn-info center-block">
            Get a new Tamagotchi
        </button>
    </form>

</div>
